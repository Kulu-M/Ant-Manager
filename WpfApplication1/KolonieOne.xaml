    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>


        <TabControl Margin="0,10,-0.4,-10" Grid.ColumnSpan="4">
            <TabItem Header="Übersicht" Grid.Column="0" Grid.Row="0">

                <Grid Width="900" Margin="0,0,380,0" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition MinHeight="30" Height="Auto"/>
                        <RowDefinition MinHeight="30" Height="Auto"/>
                        <RowDefinition MinHeight="30" Height="Auto"/>
                        <RowDefinition MinHeight="30" Height="Auto"/>
                        <RowDefinition MinHeight="30" Height="Auto"/>
                        <RowDefinition MinHeight="30" Height="Auto"/>

                    </Grid.RowDefinitions>
                    <Label Content="Name"  Margin="69,10,162,5" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2"></Label>
                    <Label Content="Art" Margin="82,10,149,5"  Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2"></Label>
                    <Label Content="Gründungsdatum"  Margin="5,10,10,5" Grid.Column="0" Grid.Row="3"></Label>
                    <Label Content="Anmerkung" Margin="37,10,194,5"  Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="2"></Label>

                    <Label HorizontalAlignment="Left"  Margin="10,10,0,5" Grid.Column="1" Grid.Row="1" Width="200" Content="Formicarium 1"/>
                    <Label HorizontalAlignment="Left"  Margin="10,10,5,5" Grid.Column="1" Grid.Row="2" Width="200" Content="Lasius niger"/>
                    <Label HorizontalAlignment="Left"  Margin="10,10,5,5" Grid.Column="1" Grid.Row="4" Width="200" Content="Gelbliche Farbvariante (Südeuropa)"/>
                    <Label HorizontalAlignment="Center" Margin="10,10,5,5"  Grid.Column="1" Grid.Row="3" Width="200" Content="März 2014"></Label>
                    <Button Content="Stammdaten ändern" HorizontalAlignment="Left" Margin="37,86,0,-69" Grid.Row="6" VerticalAlignment="Top" Width="134" Grid.ColumnSpan="2"/>
                    <Button Content="Kolonie löschen" HorizontalAlignment="Left" Margin="109,86,-21,-66" Grid.Row="6" VerticalAlignment="Top" Width="134" Grid.ColumnSpan="2" Grid.Column="1"/>
                    <Border BorderBrush="Black" BorderThickness="1" Grid.Column="2" HorizontalAlignment="Left" Height="472" Margin="86,-4,-82,-219" Grid.RowSpan="7" VerticalAlignment="Top" Width="1"/>
                    <Expander Grid.Column="2" Grid.RowSpan="5" Header="Datenblatt anzeigen" HorizontalAlignment="Left" Margin="126,11,-117,0" Grid.Row="1" VerticalAlignment="Top" ToolTip="Lateinischer Name">
                        <TextBlock Text="&#x0d;&#x0a;Lasius (Lasius s. str.) niger &#x0d;&#x0a;&#x0d;&#x0a;Schwarze Wegameise&#x0d;&#x0a;&#x0d;&#x0a;Europa, Asien, Nordafrika, Nordamerika&#x0d;&#x0a;&#x0d;&#x0a;Monogyn&#x0d;&#x0a;&#x0d;&#x0a;Keine Soldaten&#x0d;&#x0a;&#x0d;&#x0a;Winterruhe von Ende Oktober bis Ende März&#x0d;&#x0a;&#x0d;&#x0a;Erdnester, Totholz, Stein&#x0d;&#x0a;&#x0d;&#x0a;50%-60% Luftfeuchte im Nest"/>


                    </Expander>





                </Grid>
            </TabItem>
            <TabItem Header="Aktive Tiere" Grid.Column="1" Grid.Row="0">
                <Grid Height="500" Width="900" Margin="0,0,380,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Label Content="Gynen:" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="19,0,0,5" Grid.Column="0" Grid.Row="0"/>
                    <Label Content="Arbeiter:" HorizontalAlignment="Left" Margin="10,10,5,5" Grid.Column="0" Grid.Row="1"/>
                    <Label Content="Soldaten:" HorizontalAlignment="Left" Margin="6,48.4,0,184.2" Grid.Column="0" Grid.Row="1" IsEnabled="False" Grid.RowSpan="2"/>
                    <TextBox x:Name="TextBoxGynen" VerticalAlignment="Bottom" HorizontalAlignment="Left" Height="23" Margin="10,10,5,5" TextWrapping="Wrap" Text="1" Width="51" HorizontalContentAlignment="Right" TextChanged="TextBoxGynen_TextChanged" Grid.Column="1" Grid.Row="0" IsReadOnly="True"/>
                    <TextBox x:Name="TextBoxArbeiter" HorizontalAlignment="Left" Height="23" Margin="10,10,5,5" TextWrapping="Wrap" Text="200" VerticalAlignment="Top" Width="51" HorizontalContentAlignment="Right" Grid.Column="1" Grid.Row="1" IsReadOnly="True"/>
                    <TextBox x:Name="textboxsoldaten2" HorizontalAlignment="Left" Height="23" Margin="10,49.2,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="51" HorizontalContentAlignment="Right" TextChanged="textboxsoldaten_TextChanged" IsEnabled="False" Grid.Column="1" Grid.Row="1"/>
                    <Button Content="Graph bearbeiten" Grid.Column="3" HorizontalAlignment="Left" Margin="572.8,11,-35.4,0" VerticalAlignment="Top" Width="109" Height="22"/>



                </Grid>
            </TabItem>
            <TabItem Header="Tiere in Produktion">
                <Grid Width="900" Margin="0,0,380,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="75*"/>
                        <RowDefinition Height="463*"/>

                    </Grid.RowDefinitions>
                    <Button Content="Graph bearbeiten" Grid.Column="3" HorizontalAlignment="Left" Margin="528,12,0,0" VerticalAlignment="Top" Width="109" Height="22"/>
                    <Label Content="Eier:"  Margin="10,10,5,5" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Grid.Row="0"/>
                    <Label Content="Larven:"  Margin="10,10,5,5" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Grid.Row="1"/>
                    <Label Content="Puppen:"  Margin="10,10,5,5" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Grid.Row="2"/>
                    <TextBox x:Name="eiertxt" HorizontalAlignment="Center"  Margin="10,10,5,5" Height="23" TextWrapping="Wrap" Text="25" VerticalAlignment="Center" Width="35" HorizontalContentAlignment="Right" Grid.Column="1" Grid.Row="0" TextChanged="TextBox_TextChanged_1"/>
                    <TextBox x:Name="larventxt" HorizontalAlignment="Right"  Margin="0,11,6,6" Height="24" TextWrapping="Wrap" Text="0" VerticalAlignment="Center" Width="34" HorizontalContentAlignment="Right" Grid.Column="1" Grid.Row="1"/>
                    <TextBox x:Name="puppentxt" HorizontalAlignment="Center"  Margin="10,10,5,5" Height="23" TextWrapping="Wrap" Text="17" VerticalAlignment="Center" Width="35" HorizontalContentAlignment="Right" Grid.Column="1" Grid.Row="2"/>
                    <Button x:Name="sendtolarven" Grid.Column="2" Grid.Row="0" Margin="10,10,5,5"  Content="V" Height="23" VerticalAlignment="Center" Click="Button_Click"></Button>
                    <Button x:Name="sendtoPuppen" Grid.Column="2" Grid.Row="1"  Margin="10,10,5,5" Content="V" Height="23" VerticalAlignment="Center" Click="sendtoPuppen_Click" ></Button>
                    <Button x:Name="geschluepft" Grid.Column="2" Grid.Row="2" Margin="10,10,5,5"  Content="Geschlüpft" Height="23" VerticalAlignment="Center" Click="geschluepft_Click"></Button>

                    <Button x:Name="save" Content="SAVE" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="save_Click" Grid.Column="3" Margin="527.8,151.8,0,0" Grid.Row="5"/>
                    <Button x:Name="load" Content="LOAD" Grid.Column="3" HorizontalAlignment="Left" Margin="394,151.8,0,0" Grid.Row="5" VerticalAlignment="Top" Width="75" Click="load_Click"/>

                </Grid>
            </TabItem>
            <TabItem Header="Versorgung">
                <Grid Width="900" Margin="0,0,380,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Label Content="Zucker" HorizontalAlignment="Left" Margin="16,10,0,0" VerticalAlignment="Top" Width="57" Grid.Column="0" Grid.Row="1"/>
                    <Label Content="Proteine" HorizontalAlignment="Left" Margin="10,10,5,5" VerticalAlignment="Top" Grid.Column="0" Grid.Row="2"/>
                    <Label Content="Wasser" HorizontalAlignment="Left" Margin="16,0,0,6" VerticalAlignment="Bottom" Grid.Column="0" Grid.Row="0"/>
                    <ProgressBar x:Name="progressbarwasser" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="26" Margin="10,10,5,5" Width="100" Value="50" ValueChanged="progressbarwasser_ValueChanged" Grid.Column="1" Grid.Row="0"/>
                    <ProgressBar x:Name="progressbarzucker" HorizontalAlignment="Left" Height="26" Margin="10,10,5,5" VerticalAlignment="Top" Width="100" Value="5" ValueChanged="progressbarzucker_ValueChanged" Grid.Column="1" Grid.Row="1"/>
                    <ProgressBar x:Name="progressbarfleisch" HorizontalAlignment="Left" Height="26" Margin="10,10,5,5" VerticalAlignment="Top" Width="100" Value="90" Foreground="#FF01D328" ValueChanged="progressbarfleisch_ValueChanged" Grid.Column="1" Grid.Row="2"/>
                    <Button x:Name="wasserauf2" Content="Aufgefüllt" HorizontalAlignment="Left"  Margin="10,10,0,6" Width="75" Click="wasserauf" Grid.Column="2" Grid.Row="0"/>
                    <Button x:Name="zuckerauf2" Content="Aufgefüllt" HorizontalAlignment="Left"  Margin="10,10,5,5" VerticalAlignment="Top" Width="75" Height="26" Click="zuckerauf" Grid.Column="2" Grid.Row="1"/>
                    <Button x:Name="fleischauf2" Content="Aufgefüllt" HorizontalAlignment="Left"  Margin="10,10,5,5"  VerticalAlignment="Top" Width="75" Height="26" Click="fleischauf" Grid.Column="2" Grid.Row="2"/>
                    <Label x:Name="wasserdatum" Content="??" Grid.Column="4" HorizontalAlignment="Left" Margin="10.2,10,-7.4,0" VerticalAlignment="Top"/>
                    <Label x:Name="zuckerdatum" Content="??" Grid.Column="4" HorizontalAlignment="Left" Margin="10.2,9.4,0,0" Grid.Row="1" VerticalAlignment="Top"/>
                    <Label x:Name="proteindatum" Content="??" Grid.Column="4" HorizontalAlignment="Left" Margin="9.2,9.8,0,0" Grid.Row="2" VerticalAlignment="Top"/>
                    <TextBox Grid.Column="4" HorizontalAlignment="Left" Height="185" Margin="225,108,-474,-181" Grid.Row="2" TextWrapping="Wrap" Text="12.08.2014 - Einige Minorarbeiter weisen ungewöhnliches Verhalten auf." VerticalAlignment="Top" Width="340"/>
                    <Label Content="Notizen" HorizontalAlignment="Left" Margin="169,106,-131,-21" Grid.Row="2" VerticalAlignment="Top" Grid.Column="4"/>
                    <Label Content="Label" HorizontalAlignment="Left" Margin="16,106,0,-25" Grid.Row="2" VerticalAlignment="Top"/>
                    <TextBox Grid.ColumnSpan="4" Grid.Column="1" HorizontalAlignment="Left" Height="185" Margin="10,108,-26,-183" Grid.Row="2" TextWrapping="Wrap" Text="Wüstenheuschrecke - 5 Sterne" VerticalAlignment="Top" Width="312"/>




                </Grid>
            </TabItem>








        </TabControl>
        <Image Margin="320,14,950.4,671" Source="1422560552_381599.ico" RenderTransformOrigin="0.5,0.5"/>




    </Grid>
</Page>
